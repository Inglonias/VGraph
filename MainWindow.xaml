<Window
        x:Class="VGraph.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:skia="clr-namespace:SkiaSharp.Views.WPF;assembly=SkiaSharp.Views.WPF"
        mc:Ignorable="d"
        Title="VGraph" Height="450" Width="800">
    <Grid x:Name="primaryGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="20"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <DockPanel Grid.Row="0">
            <Menu HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <MenuItem Header="_File" VerticalAlignment="Stretch"></MenuItem>
            </Menu>
        </DockPanel>
        <ScrollViewer HorizontalScrollBarVisibility="Visible" Name="primaryBufferPanel" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Row="1">
            <skia:SKElement Name="mainCanvas" Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" MouseMove="MainCanvas_OnMouseMove" PaintSurface="MainCanvas_OnPaintSurface"/>
        </ScrollViewer>
    </Grid>
    
</Window>
